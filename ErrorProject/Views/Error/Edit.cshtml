@model ErrorProject.Models.Error

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Error</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            <p style="margin-top:0px">Format: yyyy-mm-dd</p>
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AddressedTo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AddressedTo)
            @Html.ValidationMessageFor(model => model.AddressedTo)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
        <h3>@Html.ActionLink("Add Comment", "AddComment", new { ID = Model.ID })</h3>
    </fieldset>
    @Html.Partial("CommentsPartial", (object)ViewBag.Comments)
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
